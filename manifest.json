{
  "manifest_version": 3,
  "name": "g00bygui",
  "version": "1.0",
  "description": "Experimental Websim scripting tool with a GitHub link.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.websim.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "g00bygui_icon.png",
      "48": "g00bygui_icon.png",
      "128": "g00bygui_icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.websim.ai/*"],
      "js": ["content.js"]
    }
  ]
}
